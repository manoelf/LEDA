package sorting.test;

import static org.junit.Assert.*;

import java.util.Arrays;

import org.junit.Before;
import org.junit.Test;

import junit.framework.Assert;
import sorting.Sorting;
import sorting.simpleSorting.BubbleSort;
import sorting.simpleSorting.InsertionSort;

public class SortTest {

	InsertionSort bubble;
	Integer[] arrayNull;
	Integer[] array;
	Integer[] teste;
	
	@Before
	public void setUp() {
		Integer[] arrayNull = new Integer[] {null, null, null};
		Integer[] b = new Integer[] {6, 41, 32, 7, null, 4, 37, 49, 11, 18, 36};
		Integer[] c = new Integer[] {4, 9, 3, 4, 0, 5, 1, 4};
		Integer[] d = new Integer[] {6, 6, 6, 6, 6, 6};
		
		bubble = new InsertionSort();
		
	}

	@Test
	public void ArrayNull() {
		this.bubble.sort(arrayNull, 0, 2);
		this.bubble.sort(new Integer[] {null});
		
		
		array = new Integer[] {4, 1, 2, 4, 6, 4, 2, 0};
		teste = new Integer[] {1, 2, 4, 4, 6, 4, 2, 0};
		
		bubble.sort(array, 0, 2);
		for (int i = 0; i <= 2; i++) {
			assertTrue(array[i] == teste[i]);
		}
	
	
	}

}
